+PART[SMX_2mStackDrill]//:FINAL
 {
	@name =SGEx-Drill-500
	@rescaleFactor = 2 //(3.75/2.5)
	@cost = 36000

	@title = SMX 500 'GigantorTerravorRex' Mining Excavator:
	@manufacturer ^= :^:SGEx, :
	@description =  <color=green>SGEx</color> 3.75m gigantic stack  Mining Excavator - 'GigantorTerravorRex'.
	
	@crashTolerance = 4200
	@maxTemp = 3400
	@mass = 15.00
	%bulkheadProfiles = size3, size5
	
	@tags ^= :^:SGEx 500 smx (terra (rex (giga :

	RESOURCE
	{
		name = Ore
		amount = 0
		maxAmount = 600
	}
	RESOURCE
	{
		name = Karborundum
		amount = 0
		maxAmount = 10
	}
	RESOURCE
	{
		name = Karbonite
		amount = 0
		maxAmount = 10
	}
	@MODULE[ModuleResourceHarvester]
	{
		@Efficiency = 50 //20
		@ImpactRange = 8 //5
		@INPUT_RESOURCE[ElectricCharge]
		{
			@Ratio = 10 //6
		}
	}
	
	@MODULE[ModuleAsteroidDrill]
	{
		@PowerConsumption = 3.0 //1.14
		@Efficiency = 45 //20
		@ImpactRange = 8 //5
	}
	
	@MODULE[ModuleCoreHeat]
	{
		@MaxCoolant = 1200 //1.5*600 Maximum amount of radiator capacity we can consume - 50 = 1 small
	}
	MODULE
	{
		name = ModuleResourceHarvester
		HarvesterType = 0
		Efficiency = 10
		ResourceName = Karborundum
		ConverterName = Karborundum Drill
		StartActionName = Start Karborundum Drill
		StopActionName = Stop Karborundum Drill
		 INPUT_RESOURCE
		 {
			ResourceName = ElectricCharge
			Ratio = 10
		 }
	}	
	MODULE
	{
		name = ModuleResourceHarvester_USI
		HarvesterType = 1
		Efficiency = 5
		ResourceName = Karbonite
		ConverterName = Karbonite Pump
		StartActionName = Start Karbonite Pump
		StopActionName = Stop Karbonite Pump
		INPUT_RESOURCE
		{
			ResourceName = ElectricCharge
			Ratio = 15
		}
	}
	MODULE
	{
		name = ModuleToggleCrossfeed
		crossfeedStatus = True
		toggleEditor = True
		toggleFlight = True
	}
	MODULE
	{
		name = KOSNameTag
		nameTag = _drill _harvestor
	}
	MODULE
	{
		name = GPOSpeedPump
		isEnabled = True
		_pumpLevel = 10
		_autoPump = True
		_autoBalance = True
	}	
	MODULE//:NEEDS[TweakScale]
	{
		name = TweakScale
		type = stack
		defaultScale = 3.75
		scaleFactors   = 0.078125, 0.15625, 0.3125, 0.625, 1.25, 2.5, 3.75, 5.0, 6.25, 7.5, 10, 15, 20
	}
}

